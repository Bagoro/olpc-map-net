<!DOCTYPE html>
<html>
<head>
	<title>olpcMAP | geo-social volunteer net</title>
	<link rel='stylesheet' type='text/css' href='http://mapmeld.appspot.com/mapmeldStyles.css'/>
	<script type='text/javascript'>
function contactMode(){
	$("coverwindow").style.display="block";
}
function closeCoverWindow(){
	$("coverwindow").style.display="none";
}
function illustrate(type){
	switch(type){
		case 0:
			$("infoBubble").style.left="400px";
			$("infoBubble").style.top="200px";
			$("infoBubbleImg").src="http://farm5.static.flickr.com/4144/4844885140_d8a55a77d5_m.jpg";
			$("mapLink").href="http://olpcMAP.net?q=Peru";
			break;
		case 1:
			$("infoBubble").style.left="600px";
			$("infoBubble").style.top="220px";
			$("infoBubbleImg").src="http://farm5.static.flickr.com/4042/4290264635_95976e7000_m.jpg";
			$("mapLink").href="http://olpcMAP.net?q=Nepal";
			break;
		case 2:
			$("infoBubble").style.left="680px";
			$("infoBubble").style.top="240px";
			$("infoBubbleImg").src="http://farm5.static.flickr.com/4142/4883271186_f56559d963_m.jpg";
			$("mapLink").href="http://olpcMAP.net?q=Middle East";
			break;
	}
}
function toMap(bCode){
	window.location = "http://olpcMAP.net?b="+bCode;
}
function $(id){return document.getElementById(id);}
	</script>
	<style type='text/css'>
html{width:100%;height:100%;z-index:1;}
body{width:100%;height:100%;margin:0px;padding:0px;background-color:#c9c9ff;}
div.main{
	background-color:#B4CFCF;
	border-left:1px solid #000000;
	border-right:1px solid #000000;
	padding:6px;
	width:90%;
}
span.navoption a{
	color:#000000;
	text-decoration:none;
}
span.navoption a:hover{
	color:#0000bb;
	text-decoration:underline;
}
span.navoption:hover{
	color:#0000bb;
	text-decoration:underline;
}
a{border:none;}
a.tab{
	font-size:11pt;
	margin-left:8px;
	margin-right:8px;
	font-weight:normal;
}
a.tab-select{
	text-decoration:none;
	color:#500;
	font-weight:bold;
	margin-left:8px;
	margin-right:8px;
}
h4{
	margin-top:20pt;
}
div.mapdesc{
	min-height:200px;
}
button.focusGroup{
	background-color:#208A08;
	background-size:100%;
	background: url(http://mapmeld.appspot.com/bg_submit-report.png) repeat-x;
	border: 4px solid #208A08;
	border-bottom: 2px solid #ffffff;
	padding: 9px 12px 9px 12px;
	width:100%;
	font-size:14pt;
	font-weight:bold;
	text-decoration:none;
}
button:hover{
	border: 4px solid #7058CA;
	border-bottom: 2px solid #ffffff;
}
blockquote{
	text-decoration:none;
	font-size:10pt;
	font-style:italic;
	color:#ffffff;
	width:200px;
	margin-left:0px;
	text-align:left;
}
.stretch {
	min-width:500px;
    width:100%;
    height:100%;
}
